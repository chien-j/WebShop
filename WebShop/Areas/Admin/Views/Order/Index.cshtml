
@model List<OrderHeader>
@{
    var currentStatus = ViewData["Status"] as string;
}

}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Danh sách đơn hàng
            </h2>
        </div>
        
    </div>
</div>


<div class="d-flex justify-content-between pb-5 pt-2">
    <span></span>
    <ul class="list-group list-group-horizontal-sm">
        <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
        <li class="list-group-item @(currentStatus == "inprocess" ? "active" : "")">Đang tiến hành</li>
        </a>
        <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="pending">
        <li class="list-group-item @(currentStatus == "pending" ? "active" : "")">Chưa giải quyết</li>
        </a>
        <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="completed">
        <li class="list-group-item @(currentStatus == "completed" ? "active" : "")">Hoàn thành</li>
        </a>
        <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="approved">
        <li class="list-group-item @(currentStatus == "approved" ? "active" : "")">Được phê duyệt</li>
        </a>
        <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="all">
        <li class="list-group-item @(currentStatus == "all" ? "active" : "")">Tất cả</li>
        </a>
    </ul>
</div>

<table id="tblData" class=" table table-bordered table-striped">
 
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Tình trạng đơn</th>
            <th>Tiền đơn hàng</th>
            <th></th>
        </tr>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.PhoneNumber</td>
                <td>@obj.ApplicationUser.Email</td>
                <td>@obj.OrderStatus</td>
                <td>@obj.OrderTotal</td>


                <td>
                    <div class=" btn-group" role="group">
                        <a asp-controller="Order" asp-action="Details" asp-route-id="" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        

                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>
